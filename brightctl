#!/bin/sh

usage() {    
    echo "usage: ./brightctl [option]"
    echo
    echo " -u to increase brightness."
    echo " -d to decrease brightness."
    echo " -h to show this menu."
}

bright()
{
    brightnessctl -q set "$value"
    dunstctl close-all
    dunstify "brightctl" "$(awk '{print "ï†…", int($1*100/7) "%"}' < /sys/class/backlight/acpi_video0/brightness)" 
}

case $1 in
    -u) value="+1" && bright ;;
    -d) value="1-" && bright ;;
    *) usage ;;
esac
